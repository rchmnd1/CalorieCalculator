<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Calorie Calculator</title>
  <style>
    table {
        width: 50%;
        border-collapse: collapse;
        margin-top: 20px;
    }
    table, th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: center;
    }

</style>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <img src="images/logo.jpg" alt="Avatar Logo" style="width:40px;" class="rounded-pill">
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/viewfood">View food options</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/addfood">Add new food</a>
          </li> 
        </ul>
      </div>
    </div>
  </nav>
  <div class="container my-5 border">
    <br>
    <div class="text-center"><h2>Calorie Calculator</h2></div>
    <br>
    
    <!-- ChatGPT was used to create this -->
    <form action="/" method="POST">
      <label for="food_select">Select Food:</label><br>
      <select id="food_select" name="food_id">
          <% foods.forEach(food => { %>
              <option value="<%= food.food_id %>"><%= food.food_name %></option>
          <% }); %>
      </select><br><br>

      <label for="calorie_amount">Amount in grams:</label><br>
      <input type="number" id="calorie_amount" name="amount_in_grams" min="0" step="1" required><br><br>
      <input type="submit" value="Calculate"><br><br>
  </form>

  <% if (typeof calculationResults !== 'undefined') { %>
      <h2>Calculation Results</h2>
      <p>Food: <%= calculationResults.foodName %></p>
      <p>Amount: <%= calculationResults.amount %> grams</p>
      <p>Total Calories: <%= calculationResults.totalCalories %></p>
      <p>Total Protein: <%= calculationResults.totalProtein %> grams</p>
      <p>Total Carbohydrates: <%= calculationResults.totalCarbs %> grams</p>
      <p>Total Fat: <%= calculationResults.totalFat %> grams</p>
  <% } %>

</body>
</html>